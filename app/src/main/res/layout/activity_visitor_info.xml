<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitorInfoActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/toolbar"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/visitor_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/company_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/visitor_email"
            android:layout_weight="45"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/visitor_mobile"
            android:layout_weight="45"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total_entries"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/last_visit"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:layout_margin="30dp"
        android:text="Allow Entry"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/app_color"
        android:textSize="18sp"
        android:id="@+id/btn_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>


</RelativeLayout>