<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitorInfoActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/visitor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/visitor_email"
            android:layout_weight="45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="5dp"
            android:layout_weight="10"
            android:background="@color/app_color"
            android:layout_height="match_parent"></View>


        <TextView
            android:id="@+id/visitor_mobile"
            android:layout_weight="45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/total_entries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/last_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:layout_margin="30dp"
        android:text="Allow Entry"

        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/app_color"
        android:textSize="18sp"
        android:id="@+id/btn_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>


</RelativeLayout>